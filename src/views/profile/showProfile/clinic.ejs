<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor-Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/partials/header.css">
    <link rel="stylesheet" href="/css/profile/show profile/clinic.css">
    <link rel="stylesheet" href="/css/partials/footer.css">

</head>
<body>
    
    <% if( islog == true && usertype == 1 ){ %>

        <div id="centeredBox" class="hidden">
            <form action="/start/book" method="post">

                <div class="arrange">
                <div>
                    <label for="">From patinet : </label>
                    <br>
                    <input type="text" name="patinetName" required>
                </div>
                <div>
                    <label for="">to doctor : </label>
                    <br>
                    <input type="text" name="consultName" required>
                </div>
                <div>
                    <label for="symtom">Enter your symtoms : </label>
                    <br>
                    <input type="text" name="symtom" required>
                </div>
                <div>
                    <label for="message"> Enter message to doctor : </label>
                    
                    <br>
                    <input type="text" name="message" required>
                </div>
                <div>
                    <label for="data">Enter your preferred date : </label>
                    <br>
                    <input type="date" name="preferredate" required>
                </div>
                </div>

                <input type="hidden" name="constid" value= "<%= data.id %>">
                <input type="hidden" name="consttype" value="3">
                <input type="hidden" name="type" value="1">

                <button type="submit">Book</button>
            </form>
        </div>

    <% }else{ %>

        <div id="centeredBox" class="hidden">
            
            <p>Please Log as patient for Booking</p>

        </div>

    <% } %>

    <!-- navbar -->

        <%- include("../../partials/header") %>


    <div class="middle">

    <div class="main">
        <div class="profile_info">
            <div class="left_info">
                <div class="data"> <!-- left part -->
                    <div class="sec1">
                        <!-- info with photo -->
                        <div class="photo">
                            photo
                            <img src="" alt="">
                        </div>
                        <div class="info">
                            <div class="main_data">
                                <p>
                                    <%= data.fullName %>
                                </p>
                                <p>
                                    <%= data.nickName %>
                                </p>
                            </div>
                            <div>
                                <p>
                                    <%= data.facility %>
                                </p>
                            </div>
                            <div>
                                <p>
                                    0
                                </p>
                            </div>
                            <div>
                                <p>
                                    <%= data.mainFacility %>
                                </p>
                            </div>
                            <div class="segment">
                                <a href="">share your feedback</a>
                            </div>
                        </div>
                    </div>

                    <div class="booking_left">

                        <div class="book_left">
                            <div>
                                <div>
                                    <p class="glow"> Doctor Consultant </p>
                                </div>
                                <div>
                                    <p> Rs. 400 </p>
                                </div>
                            </div>
                            <div>
                                <div>
                                    <p class="glow"> Doctor Appointment </p>
                                </div>
                                <div>
                                    <p> Rs. 600 </p>
                                </div>
                            </div>
                        </div>
                        <div class="book_right">
                            <div>
                                <div>
                                    <p class="glow"> Dr. Hemant gupta </p>
                                </div>
                                <div>
                                    <button>Call Now</button>
                                </div>
                            </div>
                            <div>
                                <div>
                                    <p class="glow"> Dr. Hemant gupta </p>
                                </div>
                                <div>
                                    <button class="showBoxBtn">Book Appointment</button>
                                </div>
                            </div>
                        </div>

                    </div>

                    <% if( locals.connection && locals.doctors && connection.length > 0 ){ %>

                        <div class="sec2">
                            <p> Doctors works on <%= data.fullName %> </p>
                            <% for( let i = 0;i<connection.length;i++ ){ %>
                                <div>
    
                                    <div class="lefts_info">
                                        <div class="img_div">
                                            <img src="" alt="">
                                        </div>
                                        <div class="lefts_workinfo" >
                                            <div>
                                                <p> <span class="doctor_name" > <%= doctors[i].fullName %> </span> </p>
                                            </div>
                                            <div>
                                                <p> <%= doctors[i].work %> </p>
                                            </div>
                                            <div>
                                                <p>small info</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="rights_info">
                                        <div class="rights_datainfo" >
                                            <div>
                                                <p>vote percentage</p>
                                            </div>
                                            <div>
                                                <p>stories</p>
                                            </div>
                                            <div>
                                                <p>price</p>
                                            </div>
                                            <div>
                                                <p> <%= connection[i].workingDays %> </p>
                                                <p> <%= connection[i].workingTime %> </p>
                                            </div>
                                        </div>
                                        <div>
                                            <button> Contact doctor</button>
                                        </div>
                                    </div>
        
                                </div>
                            <% } %>
                            
                        </div>

                    <% } %>

                    <div class="sec3">
                        <div>
                            <!-- section 1 reviews -->
                        </div>
                        <div>
                            <!-- section 2 question and answer -->
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="right_info">
                <div class="data">
                    <div class="slot_div">
                        <p>Pick your slot</p>
                    </div>
                    <div class="booking_part">
                        <div class="above">
                            <div>
                                <p>Doctor Sergery</p>
                            </div>
                            <div>
                                <p>Rs. 400</p>
                            </div>
                        </div>
                        <div class="mid">
                            <div>
                                <p><%= data.fullName %></p>
                            </div>
                            <div>
                                <p>fees</p>
                            </div>
                            <!-- <div>
                                <p>vedio consultant</p>
                            </div> -->
                        </div>
                        <div class="btn">
                            <button>Call Now</button>
                        </div>
                    </div>
                    <div class="booking_part">
                        <div class="above">
                            <div>
                                <p>Doctor Appointment</p>
                            </div>
                            <div>
                                <p>Rs. 400</p>
                            </div>
                            <!-- <div>
                                <p>appointment</p>
                            </div> -->
                        </div>
                        <div class="mid">
                            <div>
                                <p><%= data.fullName %></p>
                            </div>
                            <div>
                                <p>fees</p>
                            </div>
                        </div>
                        <div class="btn">

                            <% if( islog == true ){ %>
                                
                                <% if( usertype == 1 ){ %>
                                    <button class="showBoxBtn">Book Appointment</button>
                                <% }else{ %>
                                    <button class="showBoxBtn">Book Appointment</button>
                                <% } %>

                            <% }else{ %>

                                <a href="/login">
                                    <button>Book Appointment</button>
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>


    <%- include('../../partials/footer.ejs') %>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script src="/js/profile/show profile/doctorshow.js"></script>

</body>
</html>