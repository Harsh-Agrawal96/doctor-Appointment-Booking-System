<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <link rel="stylesheet" href="/css/partials/header.css">
    <link rel="stylesheet" href="/css/partials/messages.css">
    <link rel="stylesheet" href="/css/register/registerStyle.css">
    <link rel="stylesheet" href="/css/partials/footer.css">

</head>
<body>

    <%- include("../partials/messages") %>
    <%- include("../partials/header") %>


    <!-- content -->

    <div class="middle">
    <div class="main">
        <div class="contain">
            <div class="log_head">
                <p>Signup</p>
            </div>
                <div class="data">
                    <div class="choose">
                        <div class="section">
                            as patient
                        </div>
                        <div class="section">
                            as doctor
                        </div>
                    </div>
                    <div class="forms">
                        <div class="formcon one">
                            <form method="POST" action="/user/register" >
                                <% if( messages.userError ){ %>
                                    <p class="errMsg" >* <%= messages.userError %></p>
                                <% } %>
                                <label for="text">Username :</label>
                                <br>
                                <input type="text" name="username" placeholder="enter username" required>
                                <br>
                                <label for="text">Email :</label>
                                <br>
                                <input type="email" name="email" placeholder="enter email" required>
                                <br>
                                <label for="text">password :</label>
                                <br>
                                <input type="password" name="password" placeholder="enter password" required>
                                <br>
                                <label for="text">conform password :</label>
                                <br>
                                <input type="repassword" name="repassword" placeholder="re-enter password" required>
                                <br>
                                <button type="submit"> Signup </button>
                            </form>
                        </div>
                        <div class="formcon seco">
                            <form action="/doctor/register" method="POST" >
                                <% if( messages.doctorError ){ %>
                                    <p class="errMsg" >* <%= messages.doctorError %></p>
                                <% } %>
                                <label for="text">Name :</label>
                                <br>
                                <input type="text" name="name" placeholder="enter name" required>
                                <br>
                                <label for="text">Email :</label>
                                <br>
                                <input type="email" name="email" placeholder="enter email" required>
                                <br>
                                <label for="text">password :</label>
                                <br>
                                <input type="password" name="password" placeholder="enter password" required>
                                <br>
                                <label for="text">conform password :</label>
                                <br>
                                <input type="repassword" name="repassword" placeholder="re-enter password" required>
                                <br>
                                <button  type="submit"> Signup </button>
                            </form>
                        </div>
                        <div class="notsave">
                            already have a account? <a href="/login">Login</a>
                        </div>
                        <div class="condition">
                            By clicking to Signup, you are agree to our <a href="">terms and conditions </a> and accept all <a href="">cookies</a>
                        </div>
                    </div>
                </div>
        </div>
    </div>
    </div>


    <%- include('../partials/footer.ejs') %>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script src="/js/register/register.js"></script>
    <script src="/js/partials/messages.js"></script>

</body>
</html>