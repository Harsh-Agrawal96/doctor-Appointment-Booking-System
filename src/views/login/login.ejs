<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/partials/header.css">
    <link rel="stylesheet" href="/css/partials/messages.css">
    <link rel="stylesheet" href="/css/login/loginstyle.css">
    <link rel="stylesheet" href="/css/partials/footer.css">

</head>
<body>


    <%- include("../partials/messages") %>
    <%- include("../partials/header") %>

    
    <!-- content -->
    <div class="middle">
    <div class="main">
        <div class="maincontain">
            <div class="mleft">
                <div class="log_head">
                    <p>Login</p>
                </div>
                <div class="left_data">
                    <div class="choose">
                        <div class="section fir">
                            as patient
                        </div>
                        <div class="section sec">
                            as doctor
                        </div>
                    </div>
                    <div class="forms">
                        <div class="formcon">
                            <form action="/user/login" method="post" >
                                <% if( messages.loginError ){ %>
                                    <p class="errMsg" >* <%= messages.loginError %></p>
                                <% } %>
                                <label for="text">Email :</label>
                                <br>
                                <input type="email" name="email" placeholder="enter email" required>
                                <br>
                                <label for="text">password :</label>
                                <br>
                                <input type="password" name="password" placeholder="enter password" required>
                                <br>
                                <div class="save">
                                    Remember me
                                </div>
                                <div class="for_pass">
                                    <a href="">Forgot password??</a>
                                </div>
                                <button type="submit"> Login </button>
                            </form>
                        </div>
                        <div class="formcon">
                            <form action="/doctor/login" method="post" >
                                <% if( messages.loginError ){ %>
                                    <p class="errMsg" >* <%= messages.loginError %></p>
                                <% } %>
                                <label for="text">Email :</label>
                                <br>
                                <input type="email" name="email" placeholder="enter email" required>
                                <br>
                                <label for="text">password :</label>
                                <br>
                                <input type="password" name="password" placeholder="enter password" required>
                                <br>
                                <div class="save">
                                    Remember me
                                </div>
                                <div class="for_pass">
                                    <a href="">Forgot password??</a>
                                </div>
                                <button type="submit"> Login </button>
                            </form>
                        </div>
                        <div class="notsave">
                            don't have a account? <a href="/register">Signup</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mright">
                <!-- photo -->
                hello
            </div>
        </div>
    </div>
    </div>

    <%- include('../partials/footer.ejs') %>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script src="/js/login/login.js"></script>
    <script src="/js/partials/messages.js"></script>

</body>
</html>