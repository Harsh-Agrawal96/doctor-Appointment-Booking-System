
<% if( messages.error ){ %>

        <div class="msgalert msgerror" >
            <% for( let i = 0;i<messages.error.length;i++ ){ %>
                <p> <%= messages.error[i] %> </p>
            <% } %>
            <button class="closebtn" onclick="hideAlert('msgerror')">x</button>
        </div>

<% } %>

