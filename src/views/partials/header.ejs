


<div class="navbar">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Photo</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/doctor">Find Doctor</a>
              </li>
            </ul>

            <% if( locals.islog && islog == true ){ %>
              
              <div class="d-flex align-items-center padd" style="padding-right: 15px; position: relative; " >
                <img src="/path/to/profile-icon.png" alt="Profile" class="rounded-circle" style="width: 40px; height: 40px; cursor: pointer; " onclick="toggleProfileMenu()" >
                  <div id="profileMenu" style="display: none; position: absolute; top: 45px; left: 0; background-color: #f8f9fa; border: 1px solid #ddd; border-radius: 5px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); width: max-content; padding: 10px; z-index: 1000;">
                    <% if( locals.type && ( type == 2 || type == 3 ) ){ 
                      let profileurl = -1;
                      if( type == 1 ){
                        profileurl = "/user/profile/" + userid;
                      }
                      if( type == 2 ){
                        profileurl = "/doctor/profile/" + userid;
                      }
                      if( type == 3 ){
                        profileurl = "/clinic/profile/" + userid;
                      }
                    %>
                      <a 
                        href="<%= profileurl %>" 
                        class="d-block text-decoration-none mb-2" 
                        style="color: #0056b3; text-align: center; "
                      >Show Profile</a>
                    <% } %>
                    <a href="/profile/edit" class="d-block text-decoration-none mb-2" style="color: #0056b3; text-align: center; ">Edit Profile</a>
                    <a href="/logout" class="d-block text-decoration-none" style="color: #ff4d4d; text-align: center; ">Logout</a>
                  </div>
              </div>
              <div class="d-flex align-items-center" style="padding-right: 10px;" >
                <a href="/contact" class="btn me-2" style="background-color: #d0f0ff; color: #0056b3;">Contact</a>
              </div>

            <% }else{ %>

              <div class="d-flex align-items-center padd" style="padding-right: 16px;" >
                <a href="/login" class="btn me-2" style="background-color: #d0f0ff; color: #0056b3;">Login</a>
              </div>
              <div class="d-flex align-items-center" style="padding-right: 10px;" >
                <a href="/register" class="btn" style="background-color: #d0f0ff; color: #0056b3;">Signup</a>
              </div>
              
            <% } %>
            
          </div>
        </div>
      </nav>
</div>